@page
@model EulerPages.Pages.Solutions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Solution</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Solution.SolutionId" />
            <div class="form-group">
                <label asp-for="Solution.ProblemId" class="control-label"></label>
                <select asp-for="Solution.ProblemId" class="form-control" asp-items="ViewBag.ProblemId"></select>
                <span asp-validation-for="Solution.ProblemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution.Text" class="control-label"></label>
                <input asp-for="Solution.Text" class="form-control" />
                <span asp-validation-for="Solution.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution.Code" class="control-label"></label>
                <input asp-for="Solution.Code" class="form-control" />
                <span asp-validation-for="Solution.Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Solution.Score" class="control-label"></label>
                <input asp-for="Solution.Score" class="form-control" />
                <span asp-validation-for="Solution.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
